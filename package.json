{
  "name": "agenda-user-management",
  "version": "1.0.0",
  "description": "Microservice that manages user accounts",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "build:swc": "rimraf ./build && swc ./src -d build --config-file .swcrc",
    "start:dev": "nodemon",
    "start": "npm run build:swc && node build/index.js",
    "start:tsc": "npm run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.144",
    "@swc/jest": "^0.2.17",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^12.20.46",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "onchange": "^6.1.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-node": "^8.10.2",
    "typescript": "^4.7.3",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.0",
    "eslint-plugin-jest": "^24.7.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.2",
    "multer": "^1.4.4",
    "nock": "^13.2.4",
    "querystring": "^0.2.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "supertest": "^6.2.2",
    "tsyringe": "^4.6.0",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  }
}
